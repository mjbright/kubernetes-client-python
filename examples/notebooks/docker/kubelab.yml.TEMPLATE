apiVersion: v1
kind: Service
metadata:
  name: jupyter
  labels:
    app: jupyter
spec:
  ports:
  - port: PUBLIC_PORT
    name: http
    targetPort: 80
  selector:
    app: jupyter
  type: LoadBalancer
---
apiVersion: v1
kind: Pod
metadata:
  name: jupyter
  namespace: NAMESPACE
  labels:
    app: jupyter
spec:
  containers:
    - name: jupyter
      image: mjbright/kubelab
      ports:
      - containerPort: 80
        protocol: TCP
        name: http
      volumeMounts:
        - mountPath: /root/labs
          name: notebook-labs
        - mountPath: /root/notebook-volume
          name: notebook-volume
        - mountPath: /root/.kube
          name: kube-config
  volumes:
    - name: notebook-labs
      gitRepo:
        repository: "https://github.com/ContainerOrchestration/Labs.git"
    - name: notebook-volume
      gitRepo:
        repository: "https://github.com/mjbright/kubernetes-client-python.git"
    - name: kube-config
      hostPath:
        path: /home/core/.kube

